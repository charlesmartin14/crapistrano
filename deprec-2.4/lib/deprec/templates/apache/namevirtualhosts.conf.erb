<VirtualHost *:80>
    ServerName <%= "#{instance_ip}" %>
    DocumentRoot /var/www/htdocs
   
    <Directory /var/www/htdocs>
        Allow from all
        Options -MultiViews
    </Directory>

    RackBaseURI /rack
    <Directory /var/www/htdocs/rack>
        Allow from all
        Options -MultiViews        
    </Directory>       
</VirtualHost>


